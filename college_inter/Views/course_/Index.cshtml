@model IEnumerable<DAl.Course>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<form>
    <input type="text" name="text" class="text-danger" />
    <input type="submit" value="search" />
</form>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FK_Id_Department)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FK_Id_Department)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id, Name = item.Name, FK_Id_Department=item.FK_Id_Department }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id, Name = item.Name, FK_Id_Department = item.FK_Id_Department })
        </td>
    </tr>
}

</table>
